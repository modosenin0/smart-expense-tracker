# Azure Key Vault Configuration (Required for production)
# The application now loads all secrets from Azure Key Vault
# Set USE_AZURE_KEY_VAULT=true in Azure App Service settings
AZURE_KEY_VAULT_URL=https://your-keyvault-name.vault.azure.net/
USE_AZURE_KEY_VAULT=true

# Local Development Only (when USE_AZURE_KEY_VAULT=false)
# These values are ignored when Azure Key Vault is enabled
DATABASE_URL=postgresql://username:password@localhost:5432/expense_tracker
PORT=5000
JWT_SECRET=local-development-secret-key
APPLICATIONINSIGHTS_CONNECTION_STRING=local-development-key
